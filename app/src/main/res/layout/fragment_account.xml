<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="My Account"
        android:padding="20dp"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/logo_profil"/>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Akmal Faizy"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="AKMALMGM"
        android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:textSize="20sp"
        android:id="@+id/btn_set_avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn"
        android:text="Set Avatar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:textSize="20sp"
        android:id="@+id/btn_set_profil"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn"
        android:text="Set Profil"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:textSize="20sp"
        android:id="@+id/btn_logout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn"
        android:text="Logout"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>