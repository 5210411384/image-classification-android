<RelativeLayout
    android:id="@+id/relativeBg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_color"
    tools:context=".features.realtimedetection.RealtimeDetection">

    <TextView
        android:padding="20dp"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Object Detection Realtime"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:shadowDx="@integer/material_motion_duration_long_2"
        />

    <TextureView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle"
        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle"
        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"/>

    <Button
        android:layout_marginBottom="50dp"
        android:id="@+id/btnScreenshot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:text="Screenshot"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"
        android:textSize="12sp"/>

</RelativeLayout>
