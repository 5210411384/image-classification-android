<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_color"
    tools:context=".features.uploadphoto.UploadPhoto">

    <TextView
        android:padding="20dp"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:shadowDx="@integer/material_motion_duration_long_2"
        />

    <!--image view for displaying our image-->
    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="30dp"
        android:background="@drawable/bg_white_rounded"
        android:id="@+id/ImageTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/tvTitle"
        android:src="@drawable/baseline_file_upload_24"
        android:scaleType="centerCrop" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnUploadPhoto"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn"
        android:text="Upload Photo"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>